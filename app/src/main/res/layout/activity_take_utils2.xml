<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5px">

    </SurfaceView>


    <RelativeLayout
        android:id="@+id/RelativeLayout_noid"
        android:layout_width="640px"
        android:layout_height="1020px"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/sdfasdfasdf">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水印信息"
            android:textColor="#ff0000"
            android:textSize="20sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onljljl"
            android:text="拍照"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rephoto"
            android:text="重拍"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="takemphoto"
            android:text="截取屏幕view"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_v"
            android:layout_width="100dp"
            android:layout_height="65dp" />

        <ImageView
            android:id="@+id/image_take"
            android:layout_width="100dp"
            android:layout_height="65dp" />

    </LinearLayout>


</RelativeLayout>